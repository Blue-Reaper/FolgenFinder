{
  "manifest_version": 2,
  "name": "FolgenFinder",
  "description": "Always be up to date with your favourite show and be notified of new episodes.",
  "version": "0.2.2",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": ["<all_urls>", "bookmarks", "theme", "storage"],
  "background": {
    "scripts": ["lib/jquery.min.js", "background_script.js", "development.js"]
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    }
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "sidebar_action": {
    "default_title": "FolgenFinder",
    "default_panel": "sidebar/sidebar.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "folgenfinder@blue-reaper.github.io"
    }
  }
}
