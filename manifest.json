{
  "manifest_version": 2,
  "name": "FolgenFinder",
  "description": "Always be up to date with your favourite show and be notified of new episodes.",
  "version": "0.2.0",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": ["<all_urls>", "bookmarks", "theme"],
  "background": {
    "scripts": ["lib/jquery.min.js", "background_script.js"]
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/popup.html",
    "default_title": "FolgenFinder"
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "sidebar_action": {
    "default_title": "FolgenFinder - new episodes",
    "default_panel": "sidebar/sidebar.html"
  }
}
